<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/r1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Nutrition plan"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:fontFamily="@font/oswald"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Get better everyday"
        android:layout_gravity="center"
        android:fontFamily="@font/proxima_nova"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#a7a7a7" />

    <Button
        android:id="@+id/nutrition_plan_nut_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_style_price"
        android:fontFamily="@font/oswald"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:text="1 month                           RS900"
        android:textColor="@color/colorClear"
        android:textStyle="bold" />

    <Button
        android:id="@+id/nutrition_plan_nut_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald"
        android:text="2 month                         RS2400"
        android:textStyle="bold"
        android:background="@drawable/button_style_price"
        android:textColor="@color/colorClear"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/nutrition_plan_nut_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald"
        android:text="3 month                         RS3900"
        android:textStyle="bold"
        android:background="@drawable/button_style_price"
        android:textColor="@color/colorClear"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"/>
</LinearLayout>